---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Newsletter — Nevrosyne">
  <h1 class="text-3xl font-bold mb-6">Newsletter</h1>
  <p class="opacity-80 mb-6">Inscris-toi pour recevoir les dates, clips et actus.</p>

  <form
    action="https://buttondown.email/api/emails/embed-subscribe/TON_IDENTIFIANT"
    method="post"
    target="popupwindow"
    class="space-y-4 max-w-xl"
  >
    <input type="hidden" value="1" name="embed" />
    <div>
      <label class="block text-sm mb-1">Email</label>
      <input class="w-full px-3 py-2 rounded-lg bg-ink-900 border border-zinc-700" type="email" name="email" required />
    </div>
    <button class="px-5 py-3 rounded-xl bg-coal-800 hover:bg-coal-700 border border-zinc-700" type="submit">
      S’abonner
    </button>
  </form>
</BaseLayout>