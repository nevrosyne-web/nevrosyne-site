  {normVideos.length > 0 && (
    <section class="space-y-4">
      <h2 class="text-xl font-semibold">Extraits concerts live</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {normVideos.map((v) => (
          v.provider === "youtube"
            ? <YouTube id={v.id} title={v.title} />
            : (v.provider === "file" || v.provider === "local")
              ? (
                <video controls preload="metadata" class="w-full rounded-xl border border-zinc-800">
                  <source src={v.src} type={v.mime || "video/mp4"} />
                  Votre navigateur ne supporte pas la vidéo.
                </video>
              )
              : null
        ))}
      </div>
    </section>
  )}
</BaseLayout>