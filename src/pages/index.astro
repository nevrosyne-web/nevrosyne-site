<script is:raw>
  document.addEventListener("DOMContentLoaded", () => {
    const el = document.getElementById("gallery-scroll");
    if (!el) return;

    // Réglages
    const IDLE_MS = 2000;       // délai d'inactivité avant auto
    const STEP_PX = 1.5;        // vitesse (px / tick)
    const TICK_MS = 16;         // ~60 fps
    const RESUME_MS = 900;      // petite fenêtre de calme avant reprise
    const RESPECT_REDUCED = false; // mets true si tu veux respecter la préférence système

    const reduced = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    let auto = null;    // setInterval id
    let idle = null;    // setTimeout id
    let lastUser = 0;

    const canScroll = () => el.scrollWidth > el.clientWidth;
    const startAuto = () => {
      if (auto || !canScroll()) return;
      if (RESPECT_REDUCED && reduced) return;

      // coupe le snap/smooth pendant l’auto pour éviter les “freins” Safari
      el.classList.add("is-auto");

      auto = setInterval(() => {
        const max = el.scrollWidth - el.clientWidth;
        if (max <= 0) return;
        if (el.scrollLeft >= max - STEP_PX) {
          el.scrollLeft = 0;  // retour sans smooth
          return;
        }
        el.scrollLeft += STEP_PX;
      }, TICK_MS);
    };

    const stopAuto = () => {
      if (auto) { clearInterval(auto); auto = null; }
      // on remet le snap/smooth pour l’utilisateur
      el.classList.remove("is-auto");
    };

    const scheduleAuto = () => {
      if (idle) clearTimeout(idle);
      idle = setTimeout(startAuto, IDLE_MS);
    };

    const userInteracted = () => {
      lastUser = Date.now();
      stopAuto();
      // évite de relancer trop vite après un geste
      if (idle) clearTimeout(idle);
      idle = setTimeout(() => {
        // si l'utilisateur n'a pas retouché depuis RESUME_MS, on redémarre
        if (Date.now() - lastUser >= RESUME_MS) startAuto();
      }, IDLE_MS);
    };

    // Molette verticale → scroll horizontal
    el.addEventListener("wheel", (e) => {
      if (Math.abs(e.deltaY) > Math.abs(e.deltaX)) {
        e.preventDefault();
        el.scrollLeft += e.deltaY;
      }
      userInteracted();
    }, { passive: false });

    // Touch / drag / clavier
    ["touchstart","touchmove","pointerdown","pointermove","keydown"].forEach(evt => {
      el.addEventListener(evt, userInteracted, { passive: true });
    });

    // Visibilité onglet
    document.addEventListener("visibilitychange", () => {
      if (document.hidden) { stopAuto(); }
      else { scheduleAuto(); }
    });

    // Démarrage
    scheduleAuto();
  });
</script>
    
