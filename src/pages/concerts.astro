---
import BaseLayout from "../layouts/BaseLayout.astro";

// Tu pourras migrer ces données vers un YAML/JSON plus tard
const shows = [
  { date: "2025-12-12", city: "Marseille", venue: "Le Molotov", link: "#" },
  { date: "2026-01-30", city: "Aix-en-Provence", venue: "6MIC", link: "#" },
];
---
<BaseLayout title="Concerts — Nevrosyne">
  <h1 class="text-3xl font-bold mb-6">Prochains concerts</h1>
  <ul class="space-y-4">
    {shows.map(s => (
      <li class="p-4 rounded-xl border border-zinc-800 flex items-center justify-between">
        <div>
          <div class="font-semibold">{s.date}</div>
          <div class="opacity-80">{s.city} — {s.venue}</div>
        </div>
        <a href={s.link} class="px-4 py-2 rounded-lg bg-zinc-800 hover:bg-zinc-700">Infos / Billets</a>
      </li>
    ))}
  </ul>
</BaseLayout>
