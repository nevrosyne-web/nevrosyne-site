---
const { items = [] } = Astro.props as {
  items: { name: string; logo?: string; url?: string }[];
};
---
<div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
  {items.map((c) => {
    const hasLogo = c.logo && c.logo.trim().length > 0;
    const inner = hasLogo ? (
      <img
        src={c.logo}
        alt={c.name}
        loading="lazy"
        class="max-h-12 mx-auto object-contain grayscale opacity-80 hover:grayscale-0 hover:opacity-100 transition"
      />
    ) : (
      <span class="block text-center text-sm md:text-base opacity-80">{c.name}</span>
    );

    return (
      <div class="rounded-lg border border-zinc-800 bg-coal-800/40 px-3 py-4 flex items-center justify-center">
        {c.url ? (
          <a href={c.url} target="_blank" rel="noopener noreferrer" aria-label={c.name} class="w-full">
            {inner}
          </a>
        ) : inner}
      </div>
    );
  })}
</div>