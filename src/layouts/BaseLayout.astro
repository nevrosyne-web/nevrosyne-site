---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import SocialLinks from "../components/SocialLinks.astro";
import Seo from "../components/Seo.astro";
const { title = "Nevrosyne — Site officiel" } = Astro.props;
---
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Groupe de rock Nevrosyne : concerts, clips, contact et newsletter." />
    
    <!-- <link rel="icon" href="/favicon.svg" type="image/svg+xml" /> -->

    <!-- Favicon super-compatible -->
    <link rel="icon" href="/favicon.ico?v=3" sizes="any" />
    <link rel="shortcut icon" href="/favicon.ico?v=3" />

    <!-- Variantes PNG -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png?v=3" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png?v=3" />

    <link rel="icon" type="image/png" href="/favicon.png?v=3">

    <!-- Apple/iOS -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=3" />
    
    <!-- Pinned tab (barre latérale / favoris Safari) -->
    <link rel="mask-icon" href="/safari-pinned-tab.svg?v=3" color="#ffd60a">

    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#0b0e14">
    <Seo title={title} />

    <!-- Polices -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
  </head>
  <body class="bg-ink-900 text-zinc-100 min-h-screen font-sans">
    <div class="max-w-6xl mx-auto px-4">
      <Nav />
      <main class="py-10">
        <slot />
      </main>
      <footer class="border-t border-zinc-800 py-6 text-sm flex items-center justify-between gap-4 flex-wrap">
        <span class="opacity-70">© {new Date().getFullYear()} Nevrosyne 5ch — Tous droits réservés</span>
        <SocialLinks />
      </footer>
    </div>
  </body>
</html>