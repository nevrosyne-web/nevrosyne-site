---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
const { title = "Nevrosyne — Site officiel" } = Astro.props;
---
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Groupe de rock Nevrosyne : concerts, clips, contact et newsletter." />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="bg-zinc-950 text-zinc-100 min-h-screen">
    <div class="max-w-6xl mx-auto px-4">
      <Nav />
      <main class="py-10">
        <slot />
      </main>
      <footer class="border-t border-zinc-800 py-6 text-sm opacity-70">
        © {new Date().getFullYear()} Nevrosyne — Tous droits réservés
      </footer>
    </div>
  </body>
</html>
