---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import SocialLinks from "../components/SocialLinks.astro";
import Seo from "../components/Seo.astro";
import { withBase } from "../utils/paths";

const { title = "Nevrosyne — Site officiel" } = Astro.props;
---
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Groupe de rock Nevrosyne : concerts, clips, contact et newsletter." />

    <!-- Favicon universel -->
    <link rel="icon" href={withBase("favicon.v5.ico")} sizes="any" />
    <link rel="shortcut icon" href={withBase("favicon.v5.ico")} />
    <link rel="icon" type="image/png" sizes="32x32" href={withBase("favicon-32.v5.png")} />
    <link rel="icon" type="image/png" sizes="16x16" href={withBase("favicon-16.v5.png")} />
    <link rel="apple-touch-icon" sizes="180x180" href={withBase("apple-touch-icon.v5.png")} />
    <link rel="mask-icon" href={withBase("safari-pinned-tab.v5.svg")} color="#ffd60a" />
    <link rel="manifest" href={withBase("site.webmanifest")} />
    <meta name="theme-color" content="#0b0e14">

    <Seo title={title} />

    <!-- Polices -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@300;400;600;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-ink-900 text-zinc-100 min-h-screen font-sans">
    <div class="max-w-6xl mx-auto px-4">
      <Nav />
      <main class="py-10">
        <slot />
      </main>
      <footer class="border-t border-zinc-800 py-6 text-sm flex items-center justify-between gap-4 flex-wrap">
        <span class="opacity-70">© {new Date().getFullYear()} Nevrosyne 5ch — Tous droits réservés</span>
        <SocialLinks />
      </footer>
    </div>
  </body>
</html>